{
  "name": "@montejs/core",
  "version": "0.1.0-alpha0",
  "description": "Accelerated dataframes to power faster data science",
  "scripts": {
    "prepublish": "npm run build",
    "clean": "rimraf dist",
    "lint": "xo src/**/*",
    "prebuild": "npm run lint && npm run clean",
    "build": "swc src -d dist && swc -C module.type=commonjs -C jsc.target=es2015 src -d dist/cjs",
    "postbuild": "tsc && tsc -p tsconfig.cjs.json",
    "pretest": "npm run build",
    "test": "ava"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "type": "module",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monte-rs/monte.git"
  },
  "keywords": [
    "monte",
    "pandas",
    "pd",
    "dataframe",
    "accelerated",
    "polars"
  ],
  "author": "Monte Authors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monte-rs/monte/issues"
  },
  "homepage": "https://github.com/monte-rs/monte/tree/main/monte-js#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "ava": "^5.2.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4",
    "xo": "^0.54.2"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    },
    "timeout": "30s",
    "files": [
      "src/test/**/*.spec.ts"
    ]
  },
  "xo": {
    "prettier": true,
    "envs": [
      "node",
      "es2020"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "auto",
    "useTabs": false,
    "bracketSpacing": true
  }
}
